# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

# Python
[*.py]
# isort
profile = black

# Java
[*.java]
# google-java-format
max_line_length = 100
indent_size = 2

# Markdown
[*.{md,rst}]
trim_trailing_whitespace = false
indent_size = 2

# Tab indentation
[GNU{M,m}akefile]
indent_style = tab

# 2 space indentation
[*.{js,jsx,ts,tsx,json,yml,yaml,html}]
indent_size = 2
